const HomeView = () => {
  const productContext = useContext(ProductContext)
  document.title = 'Fixxo.'
  return (
    <>
      <header>
        <MainMenuSection />
        <ShowCaseSection />
      </header>
      <ProductGridSection title="Featured Products" items={productContext.featuredProducts} />
      <BannerSection />
      <FlashSaleSection_1 items={productContext.flashSaleProducts} />
      <FlashSaleSection_2 items={productContext.flashSaleProducts} />
      <Divider />
      <InfoSection />
      <FooterSection />
    </>
  )
}