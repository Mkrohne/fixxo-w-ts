const ProductsView: React.FC = () => {
  const productContext = useContext(ProductContext)

  document.title = 'Products | Fixxo.'
  return (
    <>
      <MainMenuSection />
      <BreadCrumbSection currentPage="Products" />
      <ProductGridSection title="Products" items={ProductContext.all} />
      <FooterSection />
    </>
  )
}





const ProductsView: React.FC = () => {
    const {products, getAll} = useProductContext() as ProductContextType
  
    useEffect(() => {
      getAll()
    }, [])
  
    document.title = 'Products | Fixxo.'
    return (
      <>
        <MainMenuSection />
        <BreadCrumbSection currentPage="Products" />
        <ProductGridSection title="Products" items={products} />
        <FooterSection />
      </>
    )
  }


------------------------------------------------------------------------------------------------------------------------------------




  import { createContext } from 'react'


export interface ProductContextType {

}

export const ProductContext = createContext<ProductContextType | null>(null)


------------------------------------------------------------------------------------------------------------------------------------

const ProductsView: React.FC = () => {
  const productContext = useContext(ProductContext)

  document.title = 'Products | Fixxo.'
  return (
    <>
      <MainMenuSection />
      <BreadCrumbSection currentPage="Products" />
      <ProductGridSection items={[]} title="Products" {...productContext?.products} />
      <FooterSection />
    </>
  )
}


------------------------------------------------------------------------------------------------------------------------------------

const ProductDetailsView = () => {
  const params = useParams()

return (
  <>
      <MainMenuSection /> 
      <div className='container mt-5'>
          <h1>{params.name}</h1>
      </div>    
      <FooterSection />
  </>
)
}

